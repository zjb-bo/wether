<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@id/news_all"
                style="@style/news_tag"
                android:text="全部新闻"/>

            <TextView
                android:id="@id/news_sports"
                style="@style/news_tag"
                android:text="体育热点"/>

            <TextView
                android:id="@id/news_education"
                style="@style/news_tag"
                android:text="教育热点"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@id/news_peplelife"
                style="@style/news_tag"
                android:layout_marginRight="10dp"
                android:text="民生热点"/>

            <TextView
                android:id="@id/news_entertainment"
                style="@style/news_tag"
                android:text="娱乐热点"/>

            <TextView
                android:id="@id/news_economics"
                style="@style/news_tag"
                android:text="财经热点"/>

            <TextView
                android:id="@id/news_social"
                style="@style/news_tag"
                android:layout_marginRight="10dp"
                android:text="社会热点"/>

        </LinearLayout>

        
        
    </LinearLayout>
    
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/news_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e1e1e1"
            >

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    
</LinearLayout>